baseURL = 'https://naonano.gitee.io/zhb.gitee.io'
# baseURL = 'https://nano-oss.github.io/zhb.io/'
languageCode = 'zh-cn'
title = "Bin's Blog"
copyright = "2000-{{ YEAR }}"

# 启用主题
# theme = 'anatole'
theme = 'LoveIt'

[params]
	# 主页个人信息设置
	title = "Bin"
	author = "Power by BinByZhang"	
	description = "路漫漫其修远兮，吾将上下而求索！"
	# profilePicture = "https://www.freeimg.cn/i/2024/02/09/65c5fa151a7c9.jpg"
	profilePicture = "img/header.jpg"

	# 关闭黑白主题切换
	# disableThemeSwitcher = true
	# displayMode = "dark"

	# 设置排版比例，默认为0.6
	contentratio = 0.7

	# 打开文章后自动隐藏左边栏
	# hidesidebar = true
	reversepagetitle = true

	# 首页显示内容，如设置为mainSections = ["post"]则显示发布文章
	mainSections = []

	readMore = true
	fullPostContent = true

	# 启用相关文章推荐
	relatedPosts = true
	numberOfRelatedPosts = 3

	# 启用文章过旧提醒
	oldContentWarning = true
	oldContentDuration = 365



[params.giscus]
	enable = true
    data-repo = "nano-oss/zhb.io"
    data-repo-id = "R_kgDOLVvabw"
    data-category = "Announcements"
    data-category-id = "DIC_kwDOLVvab84CdYy9"
    data-mapping = "pathname"
    data-strict = "0"
    data-reactions-enabled = "1"
    data-emit-metadata = "0"
    data-input-position = "top"
    data-theme = "light"
    data-lang = "zh-CN"
    crossorigin = "anonymous"

## 启用分类和标签
[taxonomies]
	category = 'categories'
	tag = 'tags'

## 相关文章推荐
[related]
	includeNewer = true
	threshold = 80
	toLower = true
[[related.indices]]
	name = 'keywords'
	weight = 100
[[related.indices]]
	name = 'tags'
	weight = 80

[mermaid]
	enable = true

## Math settings
[params.math]
	enable = false  # options: true, false. Enable math support globally, default: false. You can always enable math on per page.
	use = "katex"  # options: "katex", "mathjax". default is "katex".

[params.assets]
	disableFingerprinting = true

